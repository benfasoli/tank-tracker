{
  "editor.detectIndentation": false,
  "editor.tabSize": 2,

  "editor.quickSuggestions": {
    "strings": true
  },

  "emmet.showExpandedAbbreviation": "never",

  "css.validate": false,
  "tailwindCSS.colorDecorators": false,
  "tailwindCSS.lint.cssConflict": "ignore",
  "tailwindCSS.experimental.classRegex": [
    "tw`([^`]*)", // tw`...`
    "tw\\..+`([^`]*)", // tw.xxx<xxx>`...`
    "tw\\(.*?\\).*?`([^`]*)" // tw(Component)<xxx>`...`
  ]
}
